---
import CalendarSVG from "./calendarSVG.astro";
type Props = import("./mockExperience").Props;

const { title, date, description, tech, metod, index } = Astro.props;
---

<div>
    <CalendarSVG />
    <article class="ml-2">
          <h1
            class="flex items-center justify-between mb-1 text-lg md:text-xl font-semibold text-white gap-3"
        >
            {title}
        </h1>
        <time
            class="block my-2 text-sm md:text-base leading-none text-white opacity-80"
        >
            {date}
        </time>
        <p class="mb-4 text-base md:text-lg font-normal text-white">
            {description}
        </p>
        {
            tech && (
                <ul class=" flex flex-wrap gap-2 ">
                    Utilice tecnologias como:
                    {tech.map((t: string) => (
                        <li class=" bg-slate-50 rounded-full text-black px-2">
                            {t}
                        </li>
                    ))}
                </ul>
            )
        }
        {
            metod && (
                <ul class=" flex flex-wrap gap-2 mt-3">
                    Trabaje con Metodologias como:
                    {metod.map((m: string) => (
                        <li class=" bg-slate-50 rounded-full text-black px-2">
                            {m}
                        </li>
                    ))}
                </ul>
            )
        }
    </article>
</div>
