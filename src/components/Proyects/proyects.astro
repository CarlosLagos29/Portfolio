---
import { PROYECTS } from "./mockProyects";
import ProyectCard from "./proyectCard.astro";
---

<div>
    <h1 class="flex flex-row gap-2 items-center text-3xl font-bold mb-6">
        <img
            src={`https://img.icons8.com/?size=100&id=GZY448UN4Twb&format=png&color=FFFFFF`}
            class="size-8 -mb-1"
            alt="image"
        />
        Proyectos

    </h1>

    <section class="flex flex-col items-center h-[100vh] overflow-auto">
        {
            PROYECTS.map((proyect, index) => (
                <ProyectCard {...proyect} index={index} />
            ))
        }
    </section>
</div>
